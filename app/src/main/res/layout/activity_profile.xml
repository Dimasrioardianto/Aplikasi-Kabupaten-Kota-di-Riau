<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Foto Profil -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

        <!-- Nama -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ardianto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/primary_text_color" />

        <!-- Tempat dan Tanggal Lahir -->
        <TextView
            android:id="@+id/tvBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rokan Hilir, 10 Januari 2000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ardianto@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Nomor Telepon -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62 812-3456-7890"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Alamat -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Melati No.10, Bengkalis, Riau"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Kelas -->
        <TextView
            android:id="@+id/tvClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RPL-5C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Program Studi -->
        <TextView
            android:id="@+id/tvProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teknik Informatika"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

        <!-- Jurusan -->
        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurusan Rekayasa Perangkat Lunak"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/secondary_text_color" />

    </LinearLayout>
</ScrollView>
